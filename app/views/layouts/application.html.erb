<!DOCTYPE html>
<html>
  <head>
    <title>CatApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:errors] %>
      <% flash[:errors].each do |error| %>
        <p><%=error%></p>
        <% end %>
    <% end %>

    <%= yield %>
    <br><br>
    <div class="log">
      <% if session[:user_id] && User.find_by(id: session[:user_id]) != nil %>
        <br>
        <p>You are logged in as <%=User.find_by(id: session[:user_id]).name%>.</p>
        <%= button_to "My Profile", my_profile_path, method: :get %>
        <%= button_to "View All Cats", cats_path, method: :get %>
        <%= button_to "Logout", logout_path, method: :delete%> 
      <%else%>
        <p>Already Have An Account?</p>
        <%=button_to "Login", login_path, method: :get%>
        <p>New User?</p> 
        <%= button_to "Sign up", new_user_path, method: :get %>
        
    <% end %>
    </div>
    </body>
</html>
