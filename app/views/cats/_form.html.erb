<div class="form">
<%= form_with model: @cat do |f| %>
  <p><p><%= f.label :name %></p>
  <%= f.text_field :name %><br>
  <p><%= f.label :breed%></p>
  <%= f.text_field :breed %><br>
  <p><%= f.label :neighborhood %></p>
  <%= f.text_field :neighborhood %><br>
  <p><%= f.label :price %></p>
  $<%= f.number_field :price%><br>
  <p><%= f. label :image %></p>
  <%= f.file_field :image %><br>
  <p><%= f.label :tag_ids, "Tags" %></p><br>
  <%= f.collection_check_boxes :tag_ids, @tags, :id, :name%><br>
  <p><%= f.label :tags, "Add New Tags"%></p>
  <%= f.fields_for :tags, @cat.tags.build do |tags_fields| %>
    <%= tags_fields.text_field :name %></p>
  <%end%>
  <br>
  <%= f.submit %>
  </div>
<%end%>
